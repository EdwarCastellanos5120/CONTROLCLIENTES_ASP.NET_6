@model List<ClienteModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Lista de Clientes
  </div>
  <div class="card-body"> 
    <a asp-action="Guardar" asp-controller="Cliente" class=" btn btn-success">Crear Nuevo</a>
    <hr/>
    <table class="table  table-dark table-hover">
        <tr>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>DPI</td>
            <td>NIT</td>
            <td>Telefono</td>
            <td>Correo</td>
           <td>Opciones</td>
        </tr>
        <tbody>
                @foreach ( var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.DPI</td>
                        <td>@item.NIT</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Cliente" class=" btn btn-primary btn-sm" 
                            asp-route-IdCliente="@item.IdCliente">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Cliente" class=" btn btn-danger btn-sm" 
                            asp-route-IdCliente="@item.IdCliente">Eliminar</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
  </div>
</div>

